<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">
        <!--comentario de prueba-->
        <Button
            android:layout_width="match_parent"
            android:id="@+id/activity2"
            android:text="@string/go_to_activity2"
            android:layout_height="wrap_content">

        </Button>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/ir_google"
            android:text="@string/go_to_google"
            android:layout_height="wrap_content">

        </Button>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/go_alarma"
            android:text="@string/go_to_alarma"
            android:layout_height="wrap_content">

        </Button>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/go_llamada"
            android:text="@string/go_to_llamada"
            android:layout_height="wrap_content">

        </Button>


    </LinearLayout>

</LinearLayout>